package com.jdojo.intro;

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.VBox;
import javafx.scene.text.Text;
import javafx.stage.Stage;

public class Mi침aPrimeiraXanela extends Application {
	
		public static void main(String[] args) {
			Application.launch(args);
		}

		@Override
		public void start(Stage stage) throws Exception {
			VBox root = new VBox();
			
			Button btn = new Button ("Cambiar titulo");

			btn.setOnAction(e -> {
	            if (stage.getTitle().equals("Mi침a primeria xanela")) {
	            	stage.setTitle("Titulo cambiado");
	            } else {
	            	stage.setTitle("Mi침a primeira xanela");
	            }
	        });
			
			root.getChildren().add(btn);

			Scene scene = new Scene(root, 300, 50);
			stage.setScene(scene);
			stage.setTitle("Aplicaci칩n JavaFX de Exemplo");
			stage.show();
		}

	}

