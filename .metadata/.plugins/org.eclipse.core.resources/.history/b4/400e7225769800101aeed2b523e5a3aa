package com.jdojo.intro;

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.VBox;
import javafx.scene.text.Text;
import javafx.stage.Stage;

public class Mi単aPrimeiraXanela extends Application {
	
		public static void main(String[] args) {
			Application.launch(args);
		}

		@Override
		public void start(Stage stage) throws Exception {
			Text msg = new Text("Mi単a primeira xanela");
			VBox root = new VBox();
			Button btn = new Button ("Cambiar titulo");

			root.getChildren().add(msg);

			Scene scene = new Scene(root, 300, 50);
			stage.setScene(scene);
			stage.setTitle("Mi単a primeira xanela");
			stage.show();
			
				Label nameLbl = new Label("Introduce o teu nome");
				TextField nameFld = new TextField();
				
				
				 btn.setOnAction(e -> {
			            String nome = nameFld.getText();
			            if (nome.length() > 0) {
			                msg.setText("Ola " + nome);
			            } else {
			                msg.setText("Ola desco単ecido");
			            }
			        });

		}

	}

